{
  "name": "costify",
  "version": "1.0.0",
  "description": "A TypeScript platform for calculating product costs from recipes using Clean Architecture principles",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/main.ts --compile --outfile dist/costify",
    "dev": "bun --watch src/main.ts",
    "start": "./dist/costify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/infrastructure/database/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:ci": "biome ci",
    "check": "biome check src/"
  },
  "keywords": [
    "typescript",
    "clean-architecture",
    "recipe-cost-calculator",
    "ddd"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4",
    "decimal.js": "^10.4.3",
    "elysia": "^1.2.0",
    "@elysiajs/cors": "^1.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/bun": "latest",
    "@biomejs/biome": "^1.9.0",
    "@testcontainers/postgresql": "^10.13.1",
    "drizzle-kit": "^0.24.0",
    "testcontainers": "^10.13.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}